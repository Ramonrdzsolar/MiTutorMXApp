<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiTutorMXApp.Views.ConfiguracionPage">

    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Configuración" FontSize="22" Margin="0" Padding="0" TextColor="Black" FontAttributes="Bold" VerticalTextAlignment="Center"/>
        </StackLayout>

    </Shell.TitleView>

    <ContentPage.Content>
        <StackLayout>
            <Frame >
                <Label Text="Sobre nosotros" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
            </Frame>
            <Button Text="Cerrar Sesion" FontAttributes="Bold" BackgroundColor="#D9D9D9" HeightRequest="40" Margin="20"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>